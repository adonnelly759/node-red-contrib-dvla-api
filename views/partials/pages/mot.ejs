<div class="row m-0 pt-2 pb-4">
    <div class="col-12">
        <h6 class="text-muted text-center">Key</h6>
    </div>
    <div class="col-lg-3 col-sm-6 pb-2"><button class="btn btn-success btn-block">> 60 Days MOT</button></div>
    <div class="col-lg-3 col-sm-6 pb-2"><button class="btn btn-warning btn-block">< 60 Days MOT</button></div>
    <div class="col-lg-3 col-sm-6 pb-2"><button class="btn btn-danger btn-block">< 30 Days MOT</button></div>
    <div class="col-lg-3 col-sm-6 pb-2"><button class="btn btn-secondary btn-block">No MOT Details Held</button></div>
</div>

<div class="row m-0 pt-2">
    <% cars.forEach(function(car) { %>
        <div class="col-sm-6 col-lg-3 pb-2">
            <div class="card h-100 <%= car.class %> ">
                <div class="card-body text-center">
                    <div class="row">
                        <div class="col-sm-12 pb-2">
                            <h1 class="card-title"><div class="reg-mark-sm"><%= car.registrationNumber %></div></h1>
                            <h6 class="card-subtitle"><%= car.make %> (<%= car.year %>)</h6>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">MOT</div>
                        <div class="col-sm-6">TAX</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6"><%= new Date(car.motDue).toLocaleString().split(',')[0] %></div>
                        <div class="col-sm-6"><%= new Date(car.taxDue).toLocaleString().split(',')[0] %></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6"><%= car.motDaysTo %> days</div>
                        <div class="col-sm-6"><%= car.taxDaysTo %> days</div>
                    </div>
                </div>
            </div>
        </div>
    <% }) %>
</div>